{
  "extends": "tsconfig/base.json",
  "include": ["**/*.ts"],
  "compilerOptions": {
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "lib": ["es2021", "DOM"],
    "module": "esnext",
    "noEmit": true,
    "paths": {
      "@/*": ["./*"]
    },
    "resolveJsonModule": true,
    "target": "es2020"
  }
}
